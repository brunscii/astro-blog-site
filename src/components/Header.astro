---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, BASE } from '../consts';
---

<header>
	<h1>
		{SITE_TITLE}
	</h1>
	<nav>
		<HeaderLink href="/astro-blog-site/">Home</HeaderLink>
		<HeaderLink href="/astro-blog-site/blog">Blog</HeaderLink>
		<HeaderLink href="/astro-blog-site/about">About</HeaderLink>
		<HeaderLink href='https://christopherjcarlin.com' target="_blank">Portfolio</HeaderLink>
		<HeaderLink href="https://github.com/brunscii" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {

        display: grid;
        max-width: 100%;

        justify-content: center;
        margin: 0;
        padding: 0;

        /* background-color: #00ffff0f; */

        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);

        position: fixed;

	}
	h1 {
		/* font-size: 2.75rem; */
		margin: 0;
		color: #94a;
		/* width: fit-content; */
		text-shadow: .1em .1em 0.12em #00ffffaf;
	}

    nav {
        margin-bottom: .2em;
    }

    nav a:hover {
        background-color: #94a;
    }

</style>
