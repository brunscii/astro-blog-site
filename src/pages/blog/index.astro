---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

//where the blogs are sorted --add tags and search?
const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate && b.data.pubDate ? (a.data.pubDate.valueOf() - b.data.pubDate.valueOf()) : 0
);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: grid;
				grid-template-columns: 12ch 20ch;
			}
			ul li :global(time), ul li span, ul p {
				font-style: italic;
				color: #595959;
			}
			ul li span {
				/* justify-self: center; */
			}
			ul li a:visited {
				/* color: #8e32dc; */
			}
			ul p {
				text-indent: 3em;
				font-size: .8em;
			}
		</style>
	</head>
	<body>
		<Header/>

		<main>
			<section>
				<ul>
					{
						posts.map((post) => (

						//only show the link if the post is a final draft
							post.data.draft && (post.data.draft.toLowerCase() == 'final') ?
							
							<li>
								{post.data.pubDate ? <FormattedDate date={post.data.pubDate} />
								: <span> ----- </span>}
								<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
							</li>
							<p>
								{post.data.description}
							</p>

							:
							''

						))
					}
				</ul>
			</section>
		</main>

		<Footer />

	</body>
</html>
